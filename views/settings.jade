extends layout

block content
		div.row
			div.col-sm-6.col-md-4.col-md-offset-4
				#user
					h1.text-center.login-title Settings #{user.firstName}. LOCAL USER:
						div.signup-wall
							ul.user-details
								li Username ---> #{user.username}
								li Email    ---> #{user.email}
								li First Name ---> #{user.firstName} 
								li Last Name ---> #{user.lastName}
						a(href='/signout', class='text-center new-account') Sign Out
				#user
					h1.text-center.login-title Settings #{user.firstName}. TWITTER USER:
						div.signup-wall
							ul.user-details
								li Id    ---> #{user.twitter.id}
								li User name ---> #{user.twitter.username} 
								li Display Name ---> #{user.twitter.displayName}
								li Last Status ---> #{user.twitter.lastStatus}
						a(href='/signout', class='text-center new-account') Sign Out
				#user
					h1.text-center.login-title Settings #{user.firstName}. FACEBOOK USER:
						div.signup-wall
							ul.user-details
								li Email    ---> #{user.fb.email}
								li First Name ---> #{user.fb.firstName} 
								li Last Name ---> #{user.fb.lastName}
						a(href='/signout', class='text-center new-account') Sign Out